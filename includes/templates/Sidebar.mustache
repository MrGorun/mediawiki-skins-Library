{{!

	@typedef object sidebarItems

    MenuDefinition[]    data-sidebar-minihead			menu item for minibar and top of sidebar
    MenuDefinition[]    data-sidebar-navmenu			input for searchbox form
}}

<div id="sidebar" class="sidebar-container">
	<nav class="sidebar">
		<div class="brand spacer"></div>
		{{>Logo}}
		<div class="body-sidebar">
			<ul class="navbar-nav">
			{{#data-sidemenu-masthead}}
				{{{html-items}}}
			{{/data-sidemenu-masthead}}
			</ul>
			<ul class="navbar-nav" id="navigation">
				{{#data-sidemenu}}
				<li class="nav-item">
					<a href="#" class="nav-link {{class}}" data-bs-toggle="collapse" data-bs-target="#{{id}}"
						aria-expanded="false">
						{{{label}}}
					</a>
					<div class="accordion-collapse collapse" id="{{id}}" data-bs-parent="#navigation">
						<ul class="list-unstyled pb-1 ms-3 small">
							{{{html-items}}}
						</ul>
					</div>
				</li>
				{{/data-sidemenu}}
			</ul>
		</div>
		<div class="bar-bottom">
			<ul class="navbar-nav">
			{{#data-sidemenu-bottom}}
				{{{html-items}}}
			{{/data-sidemenu-bottom}}
			</ul>
		</div>
	</nav>
</div>
<div id="minibar" class="minibar-container">
	<nav class="minibar">
		{{>Logo}}
		<ul class="navbar-nav">
		{{#data-sidemenu-masthead}}
			{{{html-items}}}
		{{/data-sidemenu-masthead}}
		</ul>
		<div class="bar-bottom">
			<ul class="navbar-nav">
			{{#data-sidemenu-bottom}}
				{{{html-items}}}
			{{/data-sidemenu-bottom}}
			</ul>
		</div>
	</nav>
</div>